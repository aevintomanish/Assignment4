<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="registerDialog" title="Registration" type="Message" contentWidth="50%" contentHeight="50%">
        <content>
            <Label text="Username"/>
            <Input id="username" value=""/>
            <Label text="Password"/>
            <Input id="password" value="" type="Password"/>
        </content>
        <beginButton>
            <Button text="Register" press="onRegisterPress"/>
        </beginButton>
        <endButton>
            <Button text="Close" press="onPressCloseDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>